!#################
!# rofi settings #
!#################
! Define colors for rofi
!
! A lot of them are just transparent so only the background is shown
!
! Dark gray
!#define bg_color        #ff0000
! White-gray
!#define fg_color        #ff0000
!
!#define bg_color_alt    #ff0000
!
!#define hl_bg_color     #ff0000
! Cyan
!#define hl_fg_color     #ff0000
!
!#define bd_color        #ff0000
!
!#define sp_color        #ff0000

rofi.color-enabled:     True
! State:            Background  Foreground,     Background-alt,     Highlight bg,   Highlight fg
rofi.color-normal:  #ff0000,   #00ff00,       #0000ff,       #ff00ff,    #00ffff
!rofi.color-urgent:  #ff0000,    #ff0000,        #ff0000,            #ff0000,        #ff0000
!rofi.color-active:  #00ff00,    #00ff00,        #00ff00,            #00ff00,        #00ff00

!                   Background  Border      Separator
!rofi.color-window:  #ccff0000,  bd_color,   sp_color

rofi.fake-transparency: True
